<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/company_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="20dp"
   		 android:layout_marginRight="16dp"
   		 android:layout_marginTop="20dp"
        android:hint="@string/DNS_name"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/ly_login_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
   		 android:layout_marginRight="16dp">

        <RelativeLayout
            android:id="@+id/rl_emailaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:hint="@string/input_email"
                android:inputType="textEmailAddress" >
		
                <requestFocus />
            </EditText>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rl_phoneaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_coutry_textview"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/spinner_states"
                android:gravity="left|center_horizontal"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="20dp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="-6.5dp"
                android:background="#808080"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/login_county_code_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="8dp"
                    android:text="+"
                    android:textColor="#a6a6a6"
                    android:textSize="20dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/login_county_code_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:editable="true"
                    android:gravity="center"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="18dp"
                    android:width="70dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/account_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/user_account"
                    android:inputType="phone"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:singleLine="true" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_switch_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"/>

    </FrameLayout>

    <TextView
        android:id="@+id/blank_header"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/userfirstname_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="@string/YourName"
   		 android:layout_marginRight="16dp"
        android:singleLine="true"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/userpwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
   		 android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/Password"
        android:singleLine="true" 
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/userrepwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
   		 android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="@string/ReInputPassword"
        android:singleLine="true" 
            android:inputType="textPassword" />

   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp" >

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textColor="@color/check_company"
            android:textSize="20dp"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>