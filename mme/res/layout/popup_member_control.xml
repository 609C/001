            <TextView
                android:id="@+id/btn_set_chairman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/str_set_chairman"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/btn_set_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/str_set_speaker"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/btn_cancel_speaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/str_cancel_speaker"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/btn_start_speak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/str_start_speak"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/btn_stop_speak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/str_stop_speak"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/btn_kick_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/kick_out"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/meetingmember_camera_user_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/meetingmember_stop_use_camera"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/txt_sip_hang_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/hang_up"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>