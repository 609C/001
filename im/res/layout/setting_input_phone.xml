<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_14"
        android:text="@string/ChangePhoneNotice" />

    <TextView
        android:id="@+id/login_coutry_textview"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/spinner_states"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:text="eeeee"
        android:textColor="@color/black"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="-6.5dp"
        android:background="#808080"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/login_county_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="8dp"
            android:text="+"
            android:textColor="#a6a6a6"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/login_county_code_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:editable="true"
            android:gravity="center"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="phone"
            android:maxLength="4"
            android:maxLines="1"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:textSize="18dp"
            android:width="70dp" />

        <EditText
            android:id="@+id/login_phone_field"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:gravity="center_vertical"
            android:imeOptions="actionNext|flagNoExtractUi"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="#000000"
            android:textColorHint="#979797"
            android:textCursorDrawable="@null"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>