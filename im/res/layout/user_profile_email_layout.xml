<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_profile_item_btn"
    android:orientation="vertical"
    android:paddingLeft="@dimen/user_profile_padding"
    android:paddingRight="@dimen/user_profile_padding" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/settings_row_text"
            style="@style/mUserProfileTextStyle"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="#e8e8e8" />

        <ImageButton
            android:id="@+id/send_email"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@drawable/list_selector"
            android:clickable="true"
            android:src="@drawable/ic_profile_email" />
    </LinearLayout>

    <include
        android:id="@+id/settings_row_divider"
        layout="@layout/diver_h"
        android:visibility="gone" />

</LinearLayout>