<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <ImageView
        android:id="@+id/comment_listitem_userface"
        style="@style/user_face_image" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dip"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/comment_listitem_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/listitem_blue"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/comment_listitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/listitem_gray"
            android:textSize="@dimen/text_size_13" />

        <LinearLayout
            android:id="@+id/comment_listitem_refers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="@drawable/review_bg_blue"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/comment_listitem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:includeFontPadding="false"
            android:textSize="@dimen/text_size_16" />

        <android.support.v7.widget.GridLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip"
            app:columnCount="3" >

            <ImageView
                android:id="@+id/comment_listitem_image_01"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_02"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_03"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_04"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_05"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_06"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_07"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_08"
                style="@style/user_comment_image"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/comment_listitem_image_09"
                style="@style/user_comment_image"
                android:visibility="gone" />
        </android.support.v7.widget.GridLayout>

        <LinearLayout
            android:id="@+id/comment_listitem_relies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:background="@drawable/review_bg_top"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>