<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3F4"
    android:fillViewport="true" >

    <info.emm.ui.Views.FrameLayoutFixed
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left" >

        <info.emm.ui.LoginActivityPhoneView
            android:id="@+id/login_page1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/login_coutry_textview"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_states"
                android:gravity="left|center_horizontal"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="20sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="-6.5dp"
                android:background="#808080"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/login_county_code_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="8dp"
                    android:text="+"
                    android:textColor="#a6a6a6"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/login_county_code_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:editable="true"
                    android:gravity="center"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="18sp"
                    android:visibility="gone"
                    android:width="70dp" />

                <EditText
                    android:id="@+id/login_phone_field"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="top|left"
                    android:background="#FFFFFF"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/txt_next"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:background="#2AB2F1"
                    android:gravity="center"
                    android:text="@string/Next"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/login_confirm_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/StartText"
                    android:textColor="#808080"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="@string/TranslateToEmail"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/text_size_16"
                    android:visibility="gone" />
            </LinearLayout>
        </info.emm.ui.LoginActivityPhoneView>

        <info.emm.ui.LoginActivitySmsView
            android:id="@+id/login_page2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="top|left"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/login_sms_confirm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textColor="#808080"
                  android:lineSpacingExtra="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_sms_code_field"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:maxLines="1"
                   android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textColorHint="#979797"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/login_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                   android:paddingLeft="10dp"
                     android:lineSpacingExtra="2dp"
                android:paddingRight="10dp"
                android:textColor="#808080"
                android:textSize="16dp" />
            <Button
                android:id="@+id/txt_sms_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="#2AB2F1"
                android:gravity="center"
                android:text="@string/Next"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/spinner"
                android:layout_gravity="top|left"
                android:gravity="center_horizontal|bottom" >

                <TextView
                    android:id="@+id/wrong_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:paddingTop="24dp"
                    android:textColor="#316f9f"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            
        </info.emm.ui.LoginActivitySmsView>

        <info.emm.ui.LoginActivityRegisterView
            android:id="@+id/login_page3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/login_register_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textColor="#808080"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/login_first_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="34dp"
                android:background="#FFFFFF"
                android:capitalize="words"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#000000"
                android:textColorHint="#979797"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/login_last_name_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:autoText="false"
                android:background="#FFFFFF"
                android:capitalize="words"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:lines="1"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="#000000"
                android:textColorHint="#979797"
                android:textCursorDrawable="@null"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/input_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible" >

                <EditText
                    android:id="@+id/register_password_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:background="#FFFFFF"
                    android:hint="@string/InputPassword"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/register_password_value_rewrite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:background="#FFFFFF"
                    android:hint="@string/ReInputPassword"
                    android:imeOptions="actionNext|flagNoExtractUi"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLines="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="#000000"
                    android:textColorHint="#979797"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp" />
            </LinearLayout>
			<Button
                android:id="@+id/txt_reg_next"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="#2AB2F1"
                android:gravity="center"
                android:text="@string/Next"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <!-- <FrameLayout -->
            <!-- android:layout_width="108dp" -->
            <!-- android:layout_height="108dp" -->
            <!-- android:layout_marginTop="20dp" -->
            <!-- android:layout_below="@+id/login_register_info" -->
            <!-- android:id="@+id/login_avatar_button"> -->


            <!-- <info.emm.ui.Views.BackupImageView -->
            <!-- android:id="@+id/settings_avatar_image" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="fill_parent" -->
            <!-- android:src="@drawable/user_placeholder"/> -->


            <!-- <ImageButton -->
            <!-- android:id="@+id/settings_change_avatar_button" -->
            <!-- android:background="@drawable/photo_spinner" -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="fill_parent"/> -->
            <!-- </FrameLayout> -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/spinner"
                android:gravity="center_horizontal|bottom"
                android:minHeight="140dp" >

                <TextView
                    android:id="@+id/changed_mind"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="-40dp"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:textColor="#316f9f"
                    android:textSize="16sp" />
            </LinearLayout>

            
        </info.emm.ui.LoginActivityRegisterView>
    </info.emm.ui.Views.FrameLayoutFixed>

</ScrollView>