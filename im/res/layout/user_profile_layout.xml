<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@color/user_profile_bg"
    android:orientation="vertical" >

    
    <ListView
        android:id="@+id/listView"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:paddingBottom="16dp"
        android:scrollbars="none" />

    
    
    <FrameLayout
        android:id="@+id/start_secret_button"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/gray_button"
        android:visibility="gone" >

        <TextView
            android:id="@+id/start_secret_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/bigtimer"
            android:gravity="center"
            android:textColor="#444444"
            android:textSize="18dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linlay_msg_audio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_send_msg"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/send_msg_button_states"
            android:text="@string/sendMsg"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <Button
            android:id="@+id/bt_audiocall"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/send_msg_button_states"
            android:text="@string/voicechattip"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</LinearLayout>